new { enctype = "multipart/form-data" }))
{             
<table class="table_Add">
    <tr>
        <td>博览会名称</td> <td><Input type="text" id="ExhibitionName" name="ExhibitionName" ></td> 
    </tr>

      <tr>
        <td>博览会地点</td> <td><Input type="text" id="ExhibitionLocation" >
        </td >
    </tr>

